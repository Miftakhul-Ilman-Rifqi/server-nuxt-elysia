{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "functions": {
        "api/index.ts": {
            "runtime": "@godsreveal/vercel-bun@0.2.4"
        }
    },
    "routes": [
        { "src": "/api/(.*)", "dest": "/api/index.ts" },
        { "src": "/(.*)", "dest": "/api/index.ts" }
    ],
    "build": {
        "env": {
            "BUN_VERSION": "1.2.19"
        }
    }
}
